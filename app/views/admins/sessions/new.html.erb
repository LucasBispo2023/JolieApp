<div class="p-5 mb-4 bg-light rounded-3 w-75 mx-auto">
  <div class="container-fluid py-5 ">
<main class="form-signin w-50 m-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data:{turbo: false}) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>
    <h3 class="">Login</h3>
    <div class="form">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="form">
      <%= f.label :password, class:"form-label"  %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %> <br />
    </div>
    <div class="actions">
      <%= f.submit "Logar", class:"w-100 btn btn-lg btn-primary",style:"margin-bottom:15px" %> <br />
    </div>
  <% end %>
</main>
</div>
</div>